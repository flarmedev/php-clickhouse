{
    "name": "flarmedev/php-clickhouse",
    "description": "Lightweight PHP driver for ClickHouse.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Flarme\\PhpClickhouse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Flarme",
            "email": "contact@flarme.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.26"
    }
}
